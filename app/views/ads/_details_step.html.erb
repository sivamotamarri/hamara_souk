<script type="text/javascript">

  $(function() {
    $( "#ad_ready_date" ).datepicker({ dateFormat: "yy-mm-dd" });

  });
</script>

<div class="progress progress-striped  active"> <div class="bar"   style="width: 40%;"></div></div>


<h1>Details</h1>


<div class="title-info"><%= f.label :title %>
  <%= f.text_field :title %></div>

<% if @ad.section_id == 1 %>
  <%= render "section1", :f => f %>
<% elsif @ad.section_id == 2 || @ad.section_id == 3 %>
  <%= render "section2or3", :f => f %>
<% elsif @ad.section_id == 4 %>
  <%= render "section4", :f => f %>
<% elsif @ad.section_id == 5 %>
  <div class="discrip-info">
    <%= f.label :mobile_number ,"Mobile Num" %>
    <%= f.text_field :mobile_number %><%= f.label :mobile_number ,"(optional)" %>
  </div>
<% end %>
<div class="discrip-info">
  <%= f.label :desc ,"Description" %>
  <%= f.text_area :desc, :rows => 10, :cols => 40 %>
</div>