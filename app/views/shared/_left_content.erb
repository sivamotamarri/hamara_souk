<div class="cont-left">
  <div class="inner-search-block">
    <%= form_for @search , :url => search_ads_path, :html => {:method => :get} do |f| %>
    <div class="activity-info">      
      <span class="label-info"> <span class="selected3" id="selectsearch_city_equals">All Cities</span>        
        <%= f.select(:city_equals, City.all.collect {|p| [ p.name, p.name ] }, {:prompt => "All Cities"} , { :class => "styled3", :onchange => "selectBox(this,this.id)" }) %>
      </span>
    </div>
    <div class="activity-info">      
      <span class="label-info"> <span class="selected3" id="selectsearch_section_id_equals">All of Hamara Souk</span>
        <%= f.select(:section_id_equals, Section.all.collect {|p| [ p.name, p.id ] }, {:prompt => "All of Hamara Souk"},{:class => "styled3" ,  :onchange => "selectBox(this,this.id)" }) %>
      </span>
    </div>
    
    <span class="bdr1"></span>
          <div class="inter-block">
            <h2>Price (RS)</h2>  
    <%= f.text_field :price_gte, :size => 8  ,  :placeholder =>"Price from" %>

    <%= f.text_field :price_lte, :size => 8 , :placeholder =>"Price to"  %>
          </div>


          <div class="inter-block">
            <h2>Bedrooms (Min/Max)</h2>

              <%= f.select(:bath_rooms_gte, Ad::NUMBER.collect {|s| [ s ] },{:prompt => "Select One"}) %>
           
            <%= f.select(:bath_rooms_lte, Ad::NUMBER.collect {|s| [ s ] },{:prompt => "Select One"}) %>
          
          </div>    
    <h2>Keywords</h2>
     <%= f.text_field :tags_contains %>
    <span><input name="" type="submit" value="" /></span>
    <% end %>
  </div>  
</div>