
<fieldset id="reviews-recent">
<legend>Reviews on <span><%= @ad.title %></span></legend>
<a href = '#review' data-toggle = "modal" class="btn btn-primary btn-medium" >Write a Review</a>
<div class="fieldset-content">
  <% if !@reviews.blank? %>
  <% @reviews.each do |review| %>
  <div class="item">
    <a href="#" class="avatar"><%= user_display_pic(review.user, "50x50") %></a>
    <div class="item-title">      
      <p><strong><a href="#"><%= review.user.full_name %></a></strong> says:<br/><%= time_ago_in_words(review.created_at)%> ago</p>
    </div>
    <div class="item-rating">  	
         <% 5.times do |rate| %>
          <input name="rate<%=review.id%>"  type="radio" class="star" disabled="disabled" <% if review.rating == rate+1 %> checked="checked" <% end %> />
        <% end %>
     <span></span>
    </div>
    <div class="item-review">
  	   <%= review.desc %>
    </div>
  </div>
  <% end %>
 
  <% else %>
  <div class="item"><p>No Reviews Yet</p></div>
  <% end %>
</div>

</fieldset>

 <%= will_paginate @reviews , :renderer => RemoteLinkRenderer %>

<%= render "shared/review"  %>