<div class="register-block">
  <h1>Register</h1>
  <div class="switch-acc">(or  <%- if controller_name != 'sessions' %>
      <%= link_to "Sign in", new_session_path(resource_name) %>
    <% end -%> )</div>
  <p class="fb-register"><a href="<%=  omniauth_authorize_path(:user, :facebook) %>"><img src="/assets/register.png" alt="fb" border="none" /></a></p>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <span class="reg-info"><label>Email Address</label><input id="user_email" name="user[email]" type="email" /></span>

    <span class="reg-info"><label>Password </label><input id="user_password" name="user[password]" type="password"  /></span>
    <span class="reg-info"><label>Confirmation Password </label><input id="user_password_confirmation" name="user[password_confirmation]" type="password"  /></span>

    <span class="reg-info"><label>First Name </label><input id="user_first_name" name="user[first_name]" type="text"  /></span>
    <span class="reg-info"><label>Last Name</label><input id="user_last_name" name="user[last_name]" type="text"   /></span>

    <span class="reg-info"><label>My Mother Calls Me </label>       
      <%= f.select(:gender, [['Habibi(M)', 'M'], ['Habibti(F)', 'F']],{:prompt => "- Select One -"}, :class => "select1") %>
    </span>

    <span class="reg-info"><label>The world became a better place on (DOB)</label>
      <%= f.date_select  :dob, :order => [:day, :month, :year], :start_year => 1921,:prompt => { :day => 'Day', :month => 'Month', :year => 'Year' } , :class => "dd" %>
    </span>

    <span class="reg-info"><label>My Passport tells me I am from </label><%= f.country_select(:country, {},{:prompt => "- Select One -"} ,{ :class => "select1"}) %></span>
    <span class="reg-info"><label>My Company calls me </label><%= f.select(:professional, User::PROFESSIONALS,{:prompt => "- Select One -"},{ :class => "select1"}) %></span>

    <p class="agree">By clicking on Register, you agree to the <span class="tc"><a href = '#terms_and_cond' data-toggle = 'modal'>HS Terms and Conditions</a></span>.</p>
    <span class="register"><%= f.submit "" %></span>
  <% end %>

</div>
