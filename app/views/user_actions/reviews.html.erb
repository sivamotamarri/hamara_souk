<fieldset id="reviews-recent">
  <legend>Reviews</legend>
<div class="fieldset-content">
  <% if !@reviews.blank? %>
  <% @reviews.each do |review| %>
  <div class="item">

    <div class="item-title">
      <h3><a href="<%= review_path(review.ad.slug) %>"><%= review.ad.title %></a></h3>
    </div>
    <div class="item-rating">
         <% 5.times do |rate| %>
          <input name="rate<%=review.id%>" type="radio" class="star" disabled="disabled" <% if review.rating == rate+1 %> checked="checked" <% end %> />
        <% end %>
     <span></span>
    </div>
    <div class="item-review">
  	   <%= review.desc %>
    </div>
  </div>
  <% end %>
  <% else %>
  <div class="item"><p>No Reviews Yet</p></div>
  <% end %>
</div>
</fieldset>
 <%= will_paginate @reviews , :renderer => RemoteLinkRenderer %>